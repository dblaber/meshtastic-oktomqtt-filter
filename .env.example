# MQTT Broker Settings
MQTT_BROKER=mqtt.patinhas.da4.org
MQTT_PORT=1883
MQTT_USERNAME=meshdev
MQTT_PASSWORD=replaceme

# Topic Configuration
INPUT_TOPIC=msh/US/NY/#
OUTPUT_TOPIC=filtered/msh/US/NY

# Feature Flags
SHOW_STATS=true
DEBUG=false
NO_DECRYPT_DEFAULT=false
ALLOW_NO_BITFIELD=false

# Rejection Logging
# Path to log file for rejected packets (enables detailed rejection logging)
# Example: REJECT_LOG_FILE=logs/rejected.log
REJECT_LOG_FILE=

# Exempt Node IDs (comma-separated)
# Supports formats: 0xABCD1234, !a1b2c3d4, ABCD1234, or decimal
# Example: EXEMPT_NODES=0x12345678,!a1b2c3d4,0xabcdef01
EXEMPT_NODES=

# Custom Channel Encryption Keys (comma-separated, base64-encoded)
# Example: CHANNEL_KEYS=base64key1==,base64key2==
CHANNEL_KEYS=
